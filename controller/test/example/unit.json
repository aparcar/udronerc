{
	"id":"unit.test",
	"desc":"Unit test basic commands",
	"_drones":1,
	"drones":[[1, "fonera"]],
	"test":[
		{
			"desc":"test iterate",
			"repeat":4,
			"sleep":2,
			"cmd":[	[ "comment", "Iteration $iterate", "$iperf_server" ],
				[ "drone", 1, "comment", "Iteration $iterate" ] ]
		}, {
			"desc":"sysinfo",
			"sleep":1,
			"cmd":[	[ "drone", 1, "sysinfo" ] ]
		}, {
			"desc":"ubus",
			"sleep":1,
			"cmd":[	[ "drone", 1, "ubus", {
				"path": "system",
				"method": "board"
			}] ]
		}, {
			"desc":"ubus bad path",
			"sleep":1,
			"cmd":[	[ "fail", "drone", 1, "ubus", {
				"path": "unknown",
				"method": "unknown"
			}] ]
		}, {
			"desc":"ubus bad method",
			"sleep":1,
			"cmd":[	[ "fail", "drone", 1, "ubus", {
				"path": "system",
				"method": "unknown"
			}] ]
		}, {
			"desc":"uci_get",
			"sleep":1,
			"cmd":[	[ "drone", 1, "uci_get", {
				"config": "network",
				"section": "lan"
			}] ]
		}, {
			"desc":"uci_set",
			"sleep":1,
			"cmd":[	[ "drone", 1, "uci_set", {
				"network": {
					"lan": {
						"proto": "static",
						"ipaddr": "192.168.11.11",
						"netmask": "255.255.255.0",
						"gateway": "192.168.11.1"
					}
				}
			}] ]
		}, {
			"desc":"system",
			"sleep":1,
			"cmd":[	[ "fail", "drone", 1, "system", "/bin/wrong" ] ]
		}
	]
}
